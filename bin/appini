#!/usr/bin/env python

import getpass
import os
import appini.main

print("Welcome to APPINI, "+getpass.getuser()+"\nA perfect platform to convert your responsive websites to mobile app!\nPlease wait first time setup!")

title=input('Application Name : ')
website=input('Website (without https): ')
website_url=input('Website URL : ')
org=input('Package Name : ')
description=input('Application Discription : ')

appini.main.create(title, website, website_url, org, description)

print("Thanks for using Appini!\nFor more information you can visit our website : https://appini.ml\n")
